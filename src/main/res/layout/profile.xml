<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F6F4F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- Felhasználói profil cím -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Spinner a profil választáshoz -->
    <Spinner
        android:id="@+id/profileSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"

        android:layout_marginBottom="24dp"
        android:spinnerMode="dropdown" />

        <!--android:entries="@array/user_profiles"-->

    <!-- Profilkártya -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <!-- Kör avatar -->
        <TextView
            android:id="@+id/avatarText"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="M"
            android:textSize="24sp"
            android:textColor="#FFFFFF"

            android:layout_marginEnd="16dp" />

            <!--android:background="@drawable/circle_background"-->

        <!-- Név és e-mail -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mindentudó Miki"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="miki.akimindenttud@example.com"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp"
                android:textColor="#555555" />
        </LinearLayout>
    </LinearLayout>

    <!-- Kezdő oldal gomb -->
    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kezdő oldal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D3AC8A"
        android:drawableStart="@android:drawable/ic_menu_compass"
        android:drawablePadding="8dp" />
</LinearLayout>
