<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".products">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:title="Lakásdekor webshop"
            android:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Váza"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zöld színű vázák"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />



            <ImageView
                android:id="@+id/productImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/vase3"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A zöld színű váza egy elegáns és modern kiegészítő"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!--
            <Button
                android:id="@+id/compareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Összehasonlítás"
                android:backgroundTint="#DDC9A3"
                android:textColor="#000000" />
                -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/dogtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Szobor"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/dogsubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kutyás szobor"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />



            <ImageView
                android:id="@+id/dogproductImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/statue1"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/dogdescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Szoborral személyiséget és színt is egyszerűen lehet egy szobába csempészni"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!--
            <Button
                android:id="@+id/compareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Összehasonlítás"
                android:backgroundTint="#DDC9A3"
                android:textColor="#000000" />
                -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card"
            android:padding="16dp"
            android:layout_marginBottom="24dp">


            <TextView
                android:id="@+id/pillowtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Párna"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/pillowsubtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Különböző színű és méretű párnák"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="12dp" />



            <ImageView
                android:id="@+id/pillowproductImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/pillow"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/pillowdescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Könnyen lehet színeket és kényelmet tenni egy nappaliba vagy akár egy hálószobába."
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <!--
            <Button
                android:id="@+id/compareButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Összehasonlítás"
                android:backgroundTint="#DDC9A3"
                android:textColor="#000000" />
                -->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        tools:ignore="MissingConstraints" />
</androidx.drawerlayout.widget.DrawerLayout>